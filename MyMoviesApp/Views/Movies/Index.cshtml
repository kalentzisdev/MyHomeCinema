@model IEnumerable<MyMoviesApp.Models.Movie>
    <head>
        <link rel="stylesheet" href="~/css/site.css" type="text/css" />
    </head>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="h2" >My Movies list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Movies" asp-action="Create" class="btn btn-primary">Add new Movie</a>
        </div>
    </div>
    <br/>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped table-dark" style="width:100%">
            <thead>
                <tr>           
                    <th>
                        Movie Name
                    </th>
                    <th>
                        Year
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Rating
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var movie in Model)
                {
                <tr>
                    <td width="25%">@movie.NameM</td>
                    <td width="25%">@movie.YearM</td>
                    <td width="25%">@movie.statusM</td>
                    <td width="25%">@movie.RatingM</td>
                    <td width="25%">@movie.MovieType.Name</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Movies" asp-action="Update" asp-route-Id="@movie.IdM" class="btn btn-primary mx-1">Update</a>

                            <a asp-controller="Movies" asp-action="Delete" asp-route-Id="@movie.IdM" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No movies added yet..</p>
    }


</div>