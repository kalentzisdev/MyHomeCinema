@model IEnumerable<MyMoviesApp.Models.MovieType>

    <head>
        <link rel="stylesheet" href="~/css/site.css" type="text/css" />
    </head>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="h2">Categories</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="MovieType" asp-action="Create" class="btn btn-primary">Add new Category</a>
        </div>
    </div>
    <br/>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped table-dark" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Categories
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="30%">@obj.Name </td>
                    <td width="30%">
                        <div class="w-100 btn-group"role="group">
                            <a asp-controller="MovieType" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary mx-1">Update</a>

                            <a asp-controller="MovieType" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No movie types added yet..</p>
    }


</div>