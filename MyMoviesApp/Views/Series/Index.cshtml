@model IEnumerable<MyMoviesApp.Models.Series>

    <head>
        <link rel="stylesheet" href="~/css/site.css" type="text/css" />
    </head>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="h2">My Tv shows list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Series" asp-action="Create" class="btn btn-primary">Add new Tv Show</a>
        </div>
    </div>
    <br/>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped table-dark" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Tv Show Name
                    </th>
                    <th>
                        Year
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Rating
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var Series in Model)
                {
                <tr>
                    <td width="25%">@Series.NameS</td>
                    <td width="25%">@Series.YearS</td>
                    <td width="25%">@Series.statusS</td>
                    <td width="25%">@Series.RatingS</td>
                    <td width="25%">@Series.SeriesType.Name</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Series" asp-action="Update" asp-route-Id="@Series.IdS" class="btn btn-primary mx-1">Update</a>

                            <a asp-controller="Series" asp-action="Delete" asp-route-Id="@Series.IdS" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Tv Shows added yet..</p>
    }


</div>